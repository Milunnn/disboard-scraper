{
	"actorSpecification": 1,
	"name": "disboard-scraper",
	"title": "Disboard Scraper",
	"description": "Scrapes Disboard.com server entries based on query.",
	"version": "0.0",
	"buildTag": "latest",
	"meta": {
		"templateId": "ts-empty"
	},
	"dockerfile": "./Dockerfile",
	"storages": {
        "dataset": {
            "actorSpecification": 1,
            "views": {
                "overview": {
                    "title": "Disboard Scraper Dataset overview",
                    "transformation": {
                        "fields": [
							"name",
                            "id",
							"tags",
							"category",
							"userCount.total",
							"userCount.online",
							"bumpedAt",
							"description",
							"disboardServerUrl",
							"iconUrl",
							"joinLinkUrl",
							"reviews"
                        ],
						"flatten": [
							"userCount"
						]
                    },
                    "display": {
                        "component": "table",
                        "properties": {
                            "name": {
                                "label": "Name",
                                "format": "text"
                            },
                            "id": {
                                "label": "ID",
                                "format": "text"
                            },
                            "tags": {
                                "label": "Tags"
                            },
                            "category": {
                                "label": "Category",
                                "format": "text"
                            },
							"userCount.total": {
                                "label": "Total users",
                                "format": "number"
                            },
							"userCount.online": {
                                "label": "Online users",
                                "format": "number"
                            },
							"bumpedAt": {
								"label": "Last bump date",
								"format": "date"
							},
							"description": {
								"label": "Description",
								"format": "text"
							},
							"disboardServerUrl": {
								"label": "Disboard server URL",
								"format": "link"
							},
							"iconUrl": {
								"label": "Server icon URL",
								"format": "image"
							},
							"joinLinkUrl": {
								"label": "Join server URL",
								"format": "link"
							},
							"reviews": {
								"label": "Reviews",
								"format": "array"
							}
                        }
                    }
                }
            }
        }
    }
}
